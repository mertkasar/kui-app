<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mertkasar.kui">

    <application
        android:name=".core.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DemoActivity"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewCourseActivity"
            android:label="@string/title_activity_new_course"
            android:parentActivityName=".DemoActivity" />

        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

        <activity
            android:name=".CourseDetailActivity"
            android:label="@string/title_activity_course_detail"
            android:parentActivityName=".DemoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewQuestionActivity"
            android:label="@string/title_activity_new_question"
            android:parentActivityName=".DemoActivity"/>
    </application>

</manifest>